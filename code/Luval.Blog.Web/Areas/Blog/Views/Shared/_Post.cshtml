@model Luval.Blog.Web.Models.PostViewModel

<div data-postarea>
    <input type="hidden" id="PostId" value="@Html.Raw(Model.Post.Id)" />
    <div class="alert alert-secondary" role="alert">
        <h1 class="display-3">
            <a class="link-unstyled" href="/Blog/@Html.Raw(Model.Post.Slug)">@Html.DisplayFor(i => i.Post.Title)</a>
        </h1>
        <p>Posted on @Html.DisplayFor(i => i.PostDate) by @Html.DisplayFor(i => i.Author)</p>
        <hr>
        <p class="mb-0"></p>
    </div>
    <div class="row">
        <div class="col">
            <div id="BlogPostContent" data-post>

            </div>
        </div>
    </div>
</div>