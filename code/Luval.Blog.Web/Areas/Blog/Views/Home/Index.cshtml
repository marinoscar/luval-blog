@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Luval.Blog.Web.Models.PostViewModel
@{

    ViewData["Title"] = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<input type="hidden" id="PostId" value="@Html.Raw(Model.Post.Id)" />
<div class="alert alert-secondary" role="alert">
    <h1 class="display-3">@Html.DisplayFor(i => i.Post.Title)</h1>
    <p>Posted on @Html.DisplayFor(i => i.PostDate) by @Html.DisplayFor(i => i.Author)</p>
    <hr>
    <p class="mb-0"></p>
</div>
<div class="row">
    <div class="col">
        <div id="BlogPostContent">

        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/showdown/1.9.1/showdown.min.js" integrity="sha512-L03kznCrNOfVxOUovR6ESfCz9Gfny7gihUX/huVbQB9zjODtYpxaVtIaAkpetoiyV2eqWbvxMH9fiSv5enX7bw==" crossorigin="anonymous"></script>
    <script src="~/lib/luval.blog/blog.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            blog.getPostContent();
        });
    </script>
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/highlight.js/latest/styles/github.min.css">
    <link rel="stylesheet" href="~/lib/luval.blog/blog.css" asp-append-version="true">
}
