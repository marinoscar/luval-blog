@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Luval.Blog.Entities.BlogAuthor
@{

    ViewData["Title"] = "Author";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Author</h1>
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-column align-items-center text-center">
                    <img src="@Html.Raw(Model.ProfilePicture)" alt="Admin" class="rounded-circle">
                    <div class="mt-3">
                        <h5>@Html.Raw(Model.DisplayName)</h5>
                        <p class="text-secondary mb-1">@Html.Raw(Model.Website)</p>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <button id="edit-button" class="btn btn-outline-primary">Edit</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>